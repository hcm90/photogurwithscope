<h1>Pictures (<%= @pictures.length %>)</h1>
<%= link_to "New Picture", "/pictures/new" %>

<h1>Most recent pictures</h1>
<ul>
  <% @most_recent_pictures.each do |picture| %>
    <li><%= picture.title %></li>
  <% end %>
</ul>

<h1>Pictures ordered by most recent</h1>
<ul>
	<% @newest_pictures.each do |picture| %>
	<li><%= picture.title %></li>
	<% end %>
</ul>

<h1>Pictures posted more than a month ago</h1>
<ul>
	<% @posted_before.each do |picture| %>
	<li><%= picture.title %></li>
	<% end %>
</ul>

<%- @pictures.each do |picture| %>
  <p><%= picture[:title] %>, <%= picture[:artist] %></p>
  <%= link_to image_tag(picture.url), "/pictures/#{picture.id}" %>
<% end %>